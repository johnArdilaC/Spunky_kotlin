<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ppg.spunky_kotlin.EscogerGrupoActivity"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >


    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/cabin"
        android:text="@string/label_tipo_grupo"
        android:textColor="@android:color/background_dark"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/groupGrid"
        android:layout_width="0dp"
        android:layout_height="390dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_weight="8"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="0dp"
        android:rowCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <!-- Row 1 -->

        <!-- Column 1 -->
        <com.ppg.spunky_kotlin.cardview.CheckableCardView
            android:id="@+id/card_amigos"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_rowWeight="1"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/holo_blue_dark"

            card_view:card_background="blue"
            card_view:card_text="@string/button_amigos"
            card_view:card_image="@drawable/amigos">

        </com.ppg.spunky_kotlin.cardview.CheckableCardView>

        <!-- Column 2 -->
        <com.ppg.spunky_kotlin.cardview.CheckableCardView
            android:id="@+id/card_familia"

            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_rowWeight="1"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@drawable/green"
            card_view:card_background="green"
            card_view:card_text="@string/button_familia"
            card_view:card_image="@drawable/familia">

        </com.ppg.spunky_kotlin.cardview.CheckableCardView>


        <!-- Row 2 -->

        <!-- Column 1 -->
        <com.ppg.spunky_kotlin.cardview.CheckableCardView
            android:id="@+id/card_trabajo"

            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_rowWeight="1"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/holo_orange_dark"

            card_view:card_background="orange"
            card_view:card_text="@string/button_trabajo"
            card_view:card_image="@drawable/trabajo">

        </com.ppg.spunky_kotlin.cardview.CheckableCardView>

        <!-- Column 2 -->
        <com.ppg.spunky_kotlin.cardview.CheckableCardView
            android:id="@+id/card_desconocidos"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_rowWeight="1"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@drawable/red"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            card_view:card_background="red"
            card_view:card_text="@string/button_desconocidos"
            card_view:card_image="@drawable/desconocidos">

        </com.ppg.spunky_kotlin.cardview.CheckableCardView>

    </GridLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/cabin"
        android:text="@string/label_tipo_edad"
        android:textColor="@color/colorBlack"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupGrid" />

    <GridLayout
        android:id="@+id/ageGrid"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_weight="8"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="0dp"
        android:rowCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9">

        <!-- Row 1 -->

        <!-- Column 1 -->
        <com.ppg.spunky_kotlin.cardview.CheckableCardView
            android:id="@+id/card_menores"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_rowWeight="1"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@android:color/holo_green_dark"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            card_view:card_background="green"
            card_view:card_text="@string/text_menores"
            card_view:card_image="@drawable/menores">


        </com.ppg.spunky_kotlin.cardview.CheckableCardView>

        <!-- Column 2 -->
        <com.ppg.spunky_kotlin.cardview.CheckableCardView
            android:id="@+id/card_jovenes"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_rowWeight="1"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/holo_blue_dark"

            card_view:card_background="blue"
            card_view:card_text="@string/text_jovenes"
            card_view:card_image="@drawable/jovenes">

        </com.ppg.spunky_kotlin.cardview.CheckableCardView>


        <!-- Row 2 -->

        <!-- Column 1 -->
        <com.ppg.spunky_kotlin.cardview.CheckableCardView
            android:id="@+id/card_adultos"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_rowWeight="1"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            card_view:card_background="red"
            app:cardBackgroundColor="@android:color/holo_red_dark"

            card_view:card_text="@string/text_adultos"
            card_view:card_image="@drawable/adultos">

        </com.ppg.spunky_kotlin.cardview.CheckableCardView>

        <!-- Column 2 -->
        <com.ppg.spunky_kotlin.cardview.CheckableCardView
            android:id="@+id/card_mayores"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_rowWeight="1"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/holo_orange_dark"

            card_view:card_background="orange"
            card_view:card_text="@string/text_mayores"
            card_view:card_image="@drawable/mayores">

        </com.ppg.spunky_kotlin.cardview.CheckableCardView>

    </GridLayout>

    <Button
        android:id="@+id/siguiente"
        android:layout_width="711dp"
        android:layout_height="100dp"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="39dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorBackground"
        android:fontFamily="@font/cabin"
        android:text="@string/button_siguiente"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ageGrid"
        />


</android.support.constraint.ConstraintLayout>
